<% @results.each do |result| %>
<div class="span20">
       <div class="row-fluid">
         <div class="span2">
            <%= link_to result.name.capitalize, get_circle_details_signed_users_path(:id => result), :style => "" %>
         </div>
         <div class="span12">
         	<% if result.circle_profile_images.count == 0 %>
                        <img  src="/img/default_profile_image_thumb_small.jpg" />
                    <% else %>
                        <%= image_tag result.circle_profile_image_thumb %>
                    <% end %>
            <% display_name = result.user.display_name.blank? ? result.user.first_name.capitalize + " "+ result.user.last_name.capitalize : result.user.display_name.capitalize %>
            <%= display_name %>
         </div>
         <div class="span6">
         	<div id="btn_controls" >
                <%= render "signed/users/circles/controls", :circle => result %>
            </div>
         </div>
       </div><hr>
     </div><br>
<% end %>