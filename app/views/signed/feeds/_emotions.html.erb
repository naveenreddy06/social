<script>
function createFavorite(emotId) {
 $.ajax({
      url: "/signed/feeds/emotions_tag",
      data: {feed_id: emotionId, type_id: emotId, update_tag: {favorite: true} },
      dataType: 'script'
    });
}
</script>

<div id="myemotionsModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style = "width :320px">

  <div class="modal-header">
   <button type="button" class="close" data-dismiss="modal" aria-hidden="true" id="cboxClose" ></button>
   <h6 id="myModalLabel">Pin-it to moods you reflect...</h6>
  </div>
  <div class="modal-body">
   <div class="row-fluid">
     <% EmotionType.each do |et| %>
       <div class="span10">
         <% (et.emotions.order_by "order ASC").each do |emotion| %>
           <center><% img = image_tag("/img/Emotions/Enabled/#{emotion.name}_E.png", :title => "#{emotion.name}") %>
    <a href="#" onClick="createFavorite($(this).attr('id'));" id=<%=emotion.id.to_s %>><%= img %><% if emotion.name == "Lovely" %>
      MustHave
        <% elsif emotion.name == "Angry" %>
        Dispute
        <% elsif emotion.name == "Funny" %>
        Quality
        <% elsif emotion.name == "Creepy" %>
        UnSafe
        <% elsif emotion.name == "OMG" %>
        Awesome
        <% elsif emotion.name == "Sad" %>
        Scan
        <% elsif emotion.name == "Awesome" %>
        Value
        <% else %>
        Horrible
      <% end %></a>
      
    </center><br>
         <% end %>
      </div>
     <% end %>
   </div>
  </div>

</div>
