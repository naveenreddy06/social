
<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style = "width :320px">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true" id="cboxClose" ></button>
    <h6 id="myModalLabel">Choose which connections lists to relay</h6>
  </div>
  <div class="modal-body">
    <table class="noborder">
      <% ( current_user.connections.nil? ? [] :  current_user.connections).each do |connection| %>
       <tr>
        <div id="category_id">
          <td><input type="checkbox" name="feed[channels][]" value='<%=  connection.id %>' /></td>
          <td><%=connection.category_title%></td>
        </div>
       </tr>
      <% end %>
    </table>
  </div>
  <div class="modal-footer" style = "background-color:white">
