<% display_name = feed.user.display_name.blank? ? feed.user.first_name.capitalize + " "+ feed.user.last_name.capitalize : feed.user.display_name.capitalize %>
 <%= link_to display_name, signed_user_path(feed.user), :style => "" %><br>
 <% if feed.created_at.to_date == Date.today %>
   <%= feed.created_at.strftime("%l:%M%p").to_s %>
 <% elsif feed.created_at.to_date == Date.today-1 %>
   <%= feed.created_at.strftime("Yesterday %l:%M%p").to_s %>
 <% else %>
   <%= feed.created_at.to_date.strftime("%b %d, %Y").to_s %>
 <% end %>