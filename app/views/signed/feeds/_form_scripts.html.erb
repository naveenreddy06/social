<script>
  var chronicleId = '' ;
  var circleId = '' ;
  var connectionId = '' ;
  var selectedUser = '' ;
  var pageIn = '';
  var lastFeed = "";
  var feedCounter = 0;
  var typeId = '';

  function fetch_older_feeds() {

    $.ajax({
      url: "/signed/feeds/",
      data: {last_feed: lastFeed, chronicle_id: chronicleId, circle_id: circleId, connection_id: connectionId, type_id: typeId, feed_type: pageIn },
      dataType: 'script'
    });
  }

  function setSelectedUser(userId) {
    $("#messageUserName").html($("#userSelect-"+userId).attr('user_name'));
    $("#message_friend_id").val($("#userSelect-"+userId).attr('user_id'));
  }

  function fetch_form(select_val) {
    $.ajax({
      url: "/signed/feeds/fetch_form",
      data: {select_id: select_val, chronicle_id: chronicleId, circle_id: circleId },
      dataType: 'script'
    });
   }

  function MinPost() {
     $("#minTd").show();
     $("#formTd").hide();
  }

  function MaxPost() {
     $("#formTd").show();
     $("#minTd").hide();
  }

  function onComment(e,feed_id) {
  var key = (window.event) ? e.which : e.keyCode;

    if (key == 13 && $("#comment_empty" + feed_id).val() != '' ) {
     $.ajax({
      url: "feeds/add_comment",
      data: {feed_id:feed_id, comment:$("#comment_empty" + feed_id).val() },
      dataType: 'script'
     });
        return false;
    }
    else {
        return true;
    }
}

    function deletePost(feed_id) {
    $.ajax({
      url: "/feeds/deletepost",
    data: {feed_id:feed_id },
      dataType: 'script'
    });
   }


    function hidePost(feed_id) {
    $.ajax({
      url: "/feeds/hidepost",
    data: {feed_id:feed_id },
      dataType: 'script'
    });
   }

   function create_comment(feed_id) {
    $.ajax({
      url: "/feeds/add_comment",
      data: {feed_id:feed_id, comment:$("#" + feed_id).val() },
      dataType: 'script'
    });
   }
</script>