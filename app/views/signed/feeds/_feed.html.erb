<div class="hero-unit" adjustTd=true>
   <div class="row-fluid">
	  <div class="span14">
		<div class="row-fluid">
		  <div class="span4">
	        <%= image_tag feed.user.profile_image_thumb %>
	      </div>
	      <div class="span17">
	        <%= render "feed_header", :feed => feed %>
	      </div>
	    </div><br>
	  </div>
	  <div class="span7">
	    <%= render "feed_controls", :feed => feed %>
	  </div>

   </div>
   <%= render "feed_content", :feed => feed %>
   <%= render "wow_pin_share",:feed => feed %>
   <%= render "feed_comment", :feed => feed %>
   <%= render "comment_emotions", :feed => feed %>
   <%= render "feed_count&commentslist", :feed => feed %>

</div>
<%= render "/signed/shared/emotions" %>

<div id="myCommentMoodModal-<%= feed.id %>" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style = "width :400px" feed-id="<%= feed.id %>">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true" id="cboxClose" ></button>
    <h6 id="myModalLabel">select the emote for comment review.</h6>
  </div>
  <div class="modal-body">
    <% CommentMood.order_by("order ASC").each do |cm| %>
      <div class="span10">
        <% img = image_tag(cm.enabled_image, :title => cm.name)  %>
        <a href="#", onclick = "onComment($(this).attr('comment_mood_id'), $(this).attr('feed_id'));", feed_id = "<%= feed.id %>", comment_mood_id = "<%= cm.id %>"><%= img + " " + "#{cm.name}" %></a>
      </div><br>
    <% end %>
  </div>
</div>
