
<div id = "create_circles_form">
  <h3> Create & Edit Circles<h3>
  <h5> Create New Circle <h5>
    <%= simple_form_for @circle,:html => { :class => "form-horizontal" }, :url =>  add_circles_title_signed_users_path, :remote => true do |f| %>
       <%= hidden_field_tag :partial_name, '', :value => "manage_circles" %>
       <%= f.input :name, :class => "field" %>
       <%= f.input :listed, :as => :select, :collection => [["Public", true], ["Private", false]] %>
       <%= f.input :approve, :as => :select, :collection => [["Required", true], ["Not Required", false]] %>
       <%= f.input :short_description %>
       <%= f.input :keyword_tags %>
       <%= hidden_field_tag :id, '', :value => @circle.id %>
     <%= f.submit "Add",:class => 'btn-primary',:style => 'margin-left:180px;' %>
    <% end %>
</div>
