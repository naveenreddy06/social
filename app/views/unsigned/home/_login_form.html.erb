<%= form_tag(sessions_path, :method=>'post',  :remote => true) do %>
  <%= text_field_tag :email,'', :class => "input-large", :placeholder => "Email" %>
  <%= password_field_tag :password, '',  :class => "input-large", :placeholder => "Password" %><br>
  <%= check_box_tag :keep_me_signed_in %><span style="color:white";> Keep me signed in </span><br><br>
  <%= submit_tag "Log in...", :class => "btn btn-primary " %>
<% end %>
