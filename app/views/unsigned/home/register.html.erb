<div class="container-fluid">
  <div class="row-fluid">
    <div class="span2"></div>
       <div class="span8">
         <label style="font-size:190%">Join Now-It's free </label>
         <div style="background-color:silver; min-height:20px">User Info-</div><br>
           <%= simple_form_for( @user,:html => { :class => "form-horizontal" }) do |f| %>
             <%= f.input :first_name, :label => 'First Name' %>
             <%= f.input :last_name, :label => 'Last Name' %>
             <%= f.association :user_type, :collection => UserType.all, :label => 'User Type' %>
             <%= f.input :birthday, :as => :date, :start_year => Date.today.year - 90,
                              :end_year => Date.today.year - 1,
                              :order => [:month, :day , :year], :label => 'BirthDay', :input_html => {:class => "date",:style => 'width: 85px'} %>
             <%= f.input :phone, :label => 'Phone Number #' %>
            <div style="background-color:silver; min-height:20px">Login Info-</div><br>
              <%= f.fields_for :login do |login|  %>
                <%= login.input :email, :placeholder => 'user@domain.com',:label => 'Login Email' %>
                <%= login.input :master_email, :placeholder => 'user@domain.com',:label => 'Master Email' %>
                <%= login.input :password, :label => 'Password'  %>
                <%= login.input :password_confirmation  %>
              <% end %>
               <div style="background-color:silver; min-height:20px">Site Settings-</div><br>
                 <%= f.input :time_zone,:label => 'Time Zone'%>
                 <% @user.profile_images.build if @user.profile_images.empty? %>
                 <%= f.simple_fields_for :profile_images do |pi|  %>
                    <%= pi.input :profile_image, :as => :file %>
                 <% end %>
               <div>
By Clicking Sign Up,You agree to our <a href="#">Terms</a>
                      & understand our <a href="#">Data Use Policy</a>
               </div><br><br>
                 <%= f.button :submit ,"Sign Up",:class => 'btn-primary',name:"Sign Up" %>
           <% end %>
         </div>
         <div class="span2"></div>
  </div><!-- row fluid -->
</div><!-- container -->
